_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.8.4
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL2"
depends="acf-core lua lua-sql-postgres postgresql-client lua-posixtz"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="c609af3dda7179ad2edb3623b45be610  acf-provisioning-0.8.4.tar.xz"
sha256sums="10ed994fbf33a31b6c4a294040e2e558b28cb5f2e8c408828b6dd3353643da0d  acf-provisioning-0.8.4.tar.xz"
sha512sums="836de76922ba6e716e783d51d1191a908ec15968c797e6882fee50c1bfecb152563df6f197d30d49cc6a1bf0c0470463ebe504674a23bd442b42e37e38372815  acf-provisioning-0.8.4.tar.xz"
